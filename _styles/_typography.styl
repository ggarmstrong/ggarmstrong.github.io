// main: ../_main.styl

.no-wrap
  white-space nowrap
body, .theme-switcher--button, .main-nav--menu li a
  font-family 'Fira Sans', 'Open Sans', 'Helvetica Neue', Helvetic, Arial, sans-serif
strong
  font-weight 700
h1, h2, .main-nav--menu li a
  font-weight 700
  line-height 1.2
  font-size 22px
  margin-bottom 0
  color rgba(255,255,255,0.9)
h3
  font-weight 700
  line-height 1.3
  font-size 16px
  margin-bottom 0
  margin-top 0.5em
p, h4, li, .small-text
  font-weight 400
  line-height 1.5
  font-size 14px
.content
  h3, h4
    color rgba(0,0,0,0.85)
  p, li, .small-text
    color rgba(0,0,0,0.6)
    a
      theme(color, 'primary-dark')
      text-decoration none
      border-style dotted
      border-width 0 0 1px
      border-color inherit
      theme(border-color, 'primary')
      transition color $theme-transition, border-color $theme-transition
@media $medium
  h1, h2, .main-nav--menu li a
    font-size 28px
  h3
    font-size 20px
  p, h4
    font-size 16px
@media $large
  h1, h2, .main-nav--menu li a
    font-size 36px
  h3
    font-size 24px
  p, h4
    font-size 20px
  li, .small-text
    font-size 16px
.button
  padding 0.9em 2.1em 0.9em 1.2em
  color rgba(255,255,255,0.9)
  font-weight 400
  border-radius 4px
  text-decoration none
  theme(background-color, 'primary-dark')
  transition background-color $theme-transition
  display inline-block
  margin 20px 10px 20px 0
  position relative
  &:after
    content ""
    width 0.5em
    height 0.5em
    line-height 1
    border-width 2px 2px 0 0
    border-style solid
    border-color #fff
    border-color rgba(255,255,255,0.3)
    position absolute
    right 1.3em
    top 42%
    transform-origin 50% 50%
    transform rotate(45deg)
