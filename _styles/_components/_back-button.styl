// main: ../../_main.styl
.back-button
  position absolute
  display block
  top 0
  margin-top 30px
  margin-left 17px
  width 25px
  height 25px
  border-style solid
  border-width 0 0 5px 5px
  border-color #fff
  transform rotate(45deg)
  transform-origin 0 0
  border-radius 2px
  opacity 0.4
  @media $medium
    margin-top 4%
  .root &
    display none
