// main: ../../_main.styl
.back-button
  display block
  margin-left 17px
  width 25px
  height 25px
  border-style solid
  border-width 0 0 5px 5px
  transform rotate(45deg)
  transform-origin 0 0
  border-radius 2px
  opacity 0.4
  margin-top 30px
  .header &
    position absolute
    top 0
    border-color #fff
  .content &
    position relative
    border-color rgba(0, 0, 0, 0.375)
  @media $medium
    margin-top 4%
