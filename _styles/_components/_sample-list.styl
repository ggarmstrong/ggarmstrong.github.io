// main: ../../_main.styl

.container.sample-list--container
  max-width 900px
  @media $large
    max-width 1100px
.sample-list--item
  padding 0 0 5%
  a
    display block
    text-decoration none
  @media $medium
    padding 0 0 7%
    display flex
    flex-direction row
    justify-content space-between
    flex-wrap nowrap
    align-items center
.sample-list--image
  img
    display block
    width 100%
    border-radius 100%
    max-width 170px
    margin 25px auto 15px
  @media $medium
    flex-grow 1
    flex-shrink 1
    flex-basis 25%
    img
      max-width none
      margin-top 0
      margin-bottom 0
.sample-list--details
  padding-right 50px
  position relative
  .sample-list &:after
    content ""
    width 25px
    height 25px
    border-style solid
    border-width 5px 5px 0 0
    border-color rgba(0,0,0,0.15)
    transform rotate(45deg) translateY(-22px)
    transform-origin 0 0
    position absolute
    right 10px
    top 50%
  @media $medium
    flex-grow 3
    flex-shrink 3
    flex-basis 75%
    padding-left 6%
    top 10px
    .sample-list & a:after,
    .sample &:after
      content ""
      display table
      clear both
.sample-list--title
  font-weight bold
  margin-bottom 0.5em
  theme(color, 'primary-dark')
  transition color $theme-transition
  .sample &
    display none
    @media $medium
      display block
      visibility hidden
      max-height 1.3em
      overflow hidden
.sample-list--summary
  margin-top 0
  color rgba(0,0,0,0.6)
  .sample &
    color rgba(0,0,0,0.65)
.sample-list--tags
  font-size 0.8em
  margin-top 1em
  line-height 1.5
  max-width 25em
  @media $medium
    text-align right
    float right
  @media $large
    font-size 1em
  .tag
    display inline-block
    padding 0 0.5em 0 0
    theme(color, 'secondary', @($theme) {
      darken($theme, 15)
    })
    transition color $theme-transition
    .sample &
      theme(color, 'secondary', @($theme) {
        darken($theme, 20)
      })
    &:not(:last-child):after
      content ","
    @media $medium
      padding 0 0 0 0.5em
