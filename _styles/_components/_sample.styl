// main: ../../_main.styl

.sample--intro
  padding-top 6%
  padding-bottom 6%
  theme(background-color, 'secondary-light', @($theme) {
    darken(saturate($theme, 3), 6)
  })
  transition background-color $theme-transition
  .sample-list--item
    padding 0
  @media $medium
    .sample-list--image img
      margin-top 0
      margin-bottom 0
.sample--images
  @media $medium
    display flex
    flex-direction row
    justify-content space-between
    flex-wrap wrap
    align-items flex-start
.sample--image
  margin-bottom 3vw
  &.align-center
    align-self center
  &.align-flex-end
    align-self flex-end
  &.large
    width 100%
  img, video
    width 100%
    display block
  &.small, &.medium-small
    img, video
      margin-left auto
      margin-right auto
      max-width 327px
  @media $medium
    &.medium
      flex-grow 1
      flex-shrink 1
      flex-basis 50%
      max-width 50%
      padding-right 1.5vw
      + .medium,
      + .medium + .medium + .medium,
      + .medium + .medium + .medium + .medium + .medium,
      + .medium + .medium + .medium + .medium + .medium + .medium + .medium,
      + .medium + .medium + .medium + .medium + .medium + .medium + .medium + .medium + .medium,
      + .medium + .medium + .medium + .medium + .medium + .medium + .medium + .medium + .medium + .medium + .medium,
      + .medium + .medium + .medium + .medium + .medium + .medium + .medium + .medium + .medium + .medium + .medium + .medium + .medium,
      + .medium + .medium + .medium + .medium + .medium + .medium + .medium + .medium + .medium + .medium + .medium + .medium + .medium + .medium + .medium,
      + .medium + .medium + .medium + .medium + .medium + .medium + .medium + .medium + .medium + .medium + .medium + .medium + .medium + .medium + .medium + .medium + .medium
        padding-left 1.5vw
        padding-right 0
      + .medium + .medium,
      + .medium + .medium + .medium + .medium,
      + .medium + .medium + .medium + .medium + .medium + .medium,
      + .medium + .medium + .medium + .medium + .medium + .medium + .medium + .medium,
      + .medium + .medium + .medium + .medium + .medium + .medium + .medium + .medium + .medium + .medium,
      + .medium + .medium + .medium + .medium + .medium + .medium + .medium + .medium + .medium + .medium + .medium + .medium,
      + .medium + .medium + .medium + .medium + .medium + .medium + .medium + .medium + .medium + .medium + .medium + .medium + .medium + .medium,
      + .medium + .medium + .medium + .medium + .medium + .medium + .medium + .medium + .medium + .medium + .medium + .medium + .medium + .medium + .medium + .medium,
      + .medium + .medium + .medium + .medium + .medium + .medium + .medium + .medium + .medium + .medium + .medium + .medium + .medium + .medium + .medium + .medium + .medium + .medium
        padding-left 0
        padding-right 1.5vw
    &.small
      flex-grow 1
      flex-shrink 1
      flex-basis (100% / 3)
      max-width (100% / 3)
      &,
      + .small + .small + .small,
      + .small + .small + .small + .small + .small + .small,
      + .small + .small + .small + .small + .small + .small + .small + .small + .small
        padding-left 0
        padding-right 2vw
      + .small,
      + .small + .small + .small +.small,
      + .small + .small + .small + .small + .small + .small + .small,
      + .small + .small + .small + .small + .small + .small + .small + .small + .small + .small
        padding-left 1vw
        padding-right 1vw
